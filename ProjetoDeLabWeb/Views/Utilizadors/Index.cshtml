@model IEnumerable<ProjetoDeLabWeb.Models.Utilizador>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}

@if (Context.Session.GetString("categoria") == "Admin")
{

    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bloqueado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistoConfirmado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bloqueado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistoConfirmado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdUtilizador">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdUtilizador">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdUtilizador">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <h1>Voce não tem autorização para aceder a esta página</h1>
}
