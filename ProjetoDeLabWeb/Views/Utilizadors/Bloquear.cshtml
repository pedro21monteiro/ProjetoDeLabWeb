@model ProjetoDeLabWeb.Models.Utilizador
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Bloquear";
}

@if (Context.Session.GetString("categoria") == "Admin" && Context.Session.GetString("categoria") != "true")
{
    <h1>Bloquear</h1>

    <h4>Utilizador</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Bloquear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Motivo" class="control-label"></label>
                    <input asp-for="Motivo" class="form-control" />
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Bloquear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Back to List</a>
    </div>
}
else
{
    <h1>Voce não tem autorização para aceder a esta página</h1>
}




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

